{
	"name": "regedit-explorer",
	"displayName": "Registry Editor",
	"description": "A Registry Editor for VSCode",
	"icon": "assets/icon.png",
	"version": "0.2.0",
	"publisher": "isopodlabs",
	"repository": "https://github.com/adrianstephens/vscode_registry",
	"engines": {
		"vscode": "^1.74.0"
	},
	"categories": [
		"Other"
	],
	"keywords": [
		"Registry"
	],
	"activationEvents": [
		"onFileSystem:reg"
	],
	"files": [
		"out/*",
		"assets/*",
		"LICENSE.txt"
	],
	"main": "./out/extension.js",
	"contributes": {
		"views": {
			"explorer": [
				{
					"id": "regedit-view",
					"name": "Registry"
				}
			]
		},
		"commands": [
			{
				"command": "regedit.copy",
				"title": "Copy",
				"icon": "$(copy)",
				"category": "RegEdit"
			},
			{
				"command": "regedit.copy_strict",
				"title": "Copy (strict)",
				"icon": "$(copy)",
				"category": "RegEdit"
			},
			{
				"command": "regedit.delete",
				"title": "Delete",
				"icon": "$(trash)",
				"category": "RegEdit"
			},
			{
				"command": "regedit.rename",
				"title": "Rename",
				"category": "RegEdit"
			},
			{
				"command": "regedit.createKey",
				"title": "New Key",
				"icon": "$(new-folder)",
				"category": "RegEdit"
			},
			{
				"command": "regedit.setValue",
				"title": "New Value",
				"icon": "$(new-file)",
				"category": "RegEdit"
			},
			{
				"command": "regedit.edit",
				"title": "Edit",
				"category": "RegEdit"
			},
			{
				"command": "regedit.export",
				"title": "Export",
				"category": "RegEdit"
			},
			{
				"command": "regedit.import",
				"title": "Import into Registry...",
				"category": "RegEdit"
			},
			{
				"command": "regedit.addhost",
				"title": "Add remote machine...",
				"category": "RegEdit"
			},
			{
				"command": "regedit.refresh",
				"title": "Refresh",
				"icon": "$(refresh)",
				"category": "RegEdit"
			}

		],
		"keybindings": [
			{
				"command": "regedit.copy",
				"when": "focusedView == regedit-view",
				"key": "ctrl+c",
				"mac": "cmd+c"
			},
			{
				"command": "regedit.rename",
				"when": "focusedView == regedit-view",
				"key": "f2",
				"mac": "f2"
			},
			{
				"command": "regedit.delete",
				"when": "focusedView == regedit-view",
				"key": "delete",
				"mac": "delete"
			},
			{
				"command": "regedit.setValue",
				"when": "focusedView == regedit-view",
				"key": "ctrl+shift+a",
				"mac": "cmd+shift+a"
			},
			{
				"command": "regedit.createKey",
				"when": "focusedView == regedit-view",
				"key": "ctrl+shift+f",
				"mac": "cmd+shift+f"
			}
		],
		"menus": {
			"view/title": [
				{
					"command": "regedit.refresh",
					"when": "view == regedit-view",
					"group": "navigation"
				},
				{
					"command": "regedit.import",
					"when": "view == regedit-view",
					"group": "edit"
				},
				{
					"command": "regedit.addhost",
					"when": "view == regedit-view",
					"group": "edit"
				}
			],
			"view/item/context": [
				{
					"command": "regedit.edit",
					"when": "view == regedit-view && viewItem != 'host'",
					"group": "edit"
				},
				{
					"command": "regedit.copy",
					"when": "view == regedit-view && viewItem != 'host'",
					"alt": "regedit.copy_strict",
					"group": "edit"
				},
				{
					"command": "regedit.delete",
					"when": "view == regedit-view",
					"group": "edit"
				},
				{
					"command": "regedit.rename",
					"when": "view == regedit-view && viewItem != 'host'",
					"group": "edit"
				},
				{
					"command": "regedit.setValue",
					"when": "view == regedit-view && viewItem == 'key'",
					"group": "modify"
				},
				{
					"command": "regedit.createKey",
					"when": "view == regedit-view && viewItem == 'key'",
					"group": "edit"
				},
				{
					"command": "regedit.export",
					"when": "view == regedit-view && viewItem == 'key'",
					"group": "edit"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "eslint \"src/**/*.ts\"",
		"watch": "tsc -watch -p ./"
	},
	"devDependencies": {
		"@types/node": "^18",
		"@types/vscode": "^1.73.0",
		"@typescript-eslint/eslint-plugin": "^7.14.0",
		"@typescript-eslint/parser": "^7.14.0",
		"eslint": "^8.26.0",
		"typescript": "^5.5.2"
	}
}
